{
  "name": "remote-mouse-control-server",
  "version": "1.0.0",
  "description": "Cross-platform remote mouse and keyboard control server for mobile devices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:sensitive": "MOUSE_SENSITIVITY=2 node server.js",
    "start:performance": "MOUSE_APPLY_INTERVAL_MS=8 node server.js",
    "start:custom": "MOUSE_SENSITIVITY=1.5 MOUSE_APPLY_INTERVAL_MS=12 node server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "remote-control",
    "mouse-control",
    "keyboard-control",
    "mobile",
    "websocket",
    "cross-platform",
    "nodejs",
    "express",
    "socketio"
  ],
  "author": "Remote Mouse Control Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "remote-mouse-control-server"
  },
  "dependencies": {
    "@vue/cli-service": "^5.0.9",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}
